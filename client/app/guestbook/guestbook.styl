.label
	display block
	font-size 14px
	margin-top 5px

.name-field,
.message-field
	box-sizing border-box
	padding 5px 10px
.items
	border 1px solid #eee
	margin-top 20px
.name-item
	border-bottom 1px solid #eee
	font-size 15px
	font-weight 600
	box-sizing border-box
	padding 10px
.message-item
	box-sizing border-box
	padding 10px
	font-size 13px
.message-field
	resize none
	width 100%
.list
	list-style-type none
	height 80%
	padding 0
	margin 0
.btn-send
	display block
	width 100%

.error-message
	opacity 0
	transition .2s all

	&_active{
		opacity 1
	}